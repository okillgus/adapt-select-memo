<div class="component-inner select-memo-inner">
    {{> component this}}
    <div class="component-widget">
        <div class="select-memo-display" id="select-memo-{{topic}}">
            {{#each items}}
            <div class="component-item select-memo-item" id="item_{{id}}">
                <input type="checkbox" class="select-memo-checkbox" id="{{id}}" >
                <label class="select-memo-item-label" for="{{id}}">
                <div class="select-memo-item-label-inner">{{text}}</div>
                </label>
            </div>
            {{/each }}
        </div>
        <button class="button resetSelectMemo" >{{reset_this}}</button></p>
    </div>
</div>
